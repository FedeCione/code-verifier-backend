{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always", { "omitLastInOneLineBlock": false}],
        "semi-style": ["error", "last"],
        "no-extra-semi": ["error"],
        "semi-spacing": ["error", { "before": false, "after": true }]
    }
}
